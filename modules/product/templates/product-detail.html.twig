<!-- Breadcrumb Begin -->
{{ attach_library('product/common') }}
<div class="breadcrumb-option">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="breadcrumb__links">
					<a href="/drupal-9.4.7">
						<i class="fa fa-home"></i>
						Home
					</a>
					{% if product.parent_category_name %}
						<span>
							<a href="{{path('product.product-view-by-category', {'category_id' : product.parent_category_id})}}">{{product.parent_category_name}}
							</a>
						</span>
					{% endif %}
					<span>
						<a href="{{path('product.product-view-by-category', {'category_id' : product.category_id})}}">{{product.category_name}}
						</a>
					</span>
					<span>{{product.name}}</span>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- Breadcrumb End -->

<!-- Product Details Section Begin -->
<section class="product-details spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-6">
				<div class="product__details__pic">
					<div class="product__details__pic__left product__thumb nice-scroll">
						{% set i = 1 %}
						{% for imageUri in product.image %}
							<a class="pt active" href="#product-{{i}}">
								<img src="{{imageUri}}" alt="">
							</a>
							{% set i = i+1 %}
						{% endfor %}
					</div>
					<div class="product__details__slider__content">
						<div class="product__details__pic__slider owl-carousel">
							{% set i = 1 %}
							{% for imageUri in product.image %}
								<img data-hash="product-{{i}}" class="product__big__img" src="{{imageUri}}" alt="">
								{% set i = i+1 %}
							{% endfor %}
						</div>
					</div>
				</div>
			</div>
			<div class="col-lg-6">
				<div class="product__details__text">
					<h3>{{product.name}}
