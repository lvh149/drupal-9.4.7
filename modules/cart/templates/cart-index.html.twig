<!-- Shop Cart Section Begin -->
<section class="shop-cart spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="shop__cart__table">
					<table>
						<thead>
							<tr>
								<th>Product</th>
								<th>Price</th>
								<th>Quantity</th>
								<th>Total</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
						{% for cartDetail in sessionCart %}
							<tr>
								<td class="cart__product__item">
									<img width="100" height="150" src="{{ cartDetail.product.image }}" alt="">
									<div class="cart__product__item__title">
										<h6>{{cartDetail.product.name}}</h6>
										<div class="rating">
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
											<i class="fa fa-star"></i>
										</div>
									</div>
								</td>
								<td class="cart__price">${{cartDetail.product.price}}</td>
								<td class="cart__quantity">
									<div class="pro-qty">
										<input type="text" data-id='{{cartDetail.product.id}}' class="qty_value" value="{{cartDetail.quantity}}">
									</div>
								</td>
								<td class="cart__total">{{cartDetail.product.price * cartDetail.quantity}}</td>
								<td class="cart__close">
									<span class="icon_close delete_product" data-id='{{cartDetail.product.id}}'></span>
								</td>
							</tr>
						{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-6">
				<div class="cart__btn">
					<a href="/drupal-9.4.7">Continue Shopping</a>
				</div>
			</div>
			<div class="col-lg-6 col-md-6 col-sm-6">
				<div class="cart__btn update__btn">
					<a href="#" class="update_cart">
						<span class="icon_loading"></span>
						Update cart</a>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<div class="discount__content">
					<h6>Discount codes</h6>
					<form action="#">
						<input type="text" placeholder="Enter your coupon code">
						<button type="submit" class="site-btn">Apply</button>
					</form>
				</div>
			</div>
			<div class="col-lg-4 offset-lg-2">
				<div class="cart__total__procced">
					<h6>Cart total</h6>
					<ul>
						<li>Total
							<span class="all_total_price"></span>
						</li>
					</ul>
					<a href="{{path('order.index')}}" class="primary-btn">Proceed to checkout</a>
				</div>
			</div>
		</div>
	</div>
</section>
<!-- Shop Cart Section End -->

