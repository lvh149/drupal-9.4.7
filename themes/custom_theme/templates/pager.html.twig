{% if items %}
	<div class="col-lg-12 text-center">
		<div class="pagination__option">
			{% if items.previous %}
				<a href="{{ items.previous.href }}" class="prev" title="previous page">&#10094;</a>
			{% endif %}
			{% for key, item in items.pages %}
				{% if current == key %}
					{% set title = 'Current page'|t %}
				{% else %}
					{% set title = 'Go to page @key'|t({'@key': key}) %}
				{% endif %}
				<a href="{{ item.href }}" title="{{ title }}" {{ item.attributes|without('href', 'title') }} class="{{ current == key ? ' active' : '' }}">
					<span class="visually-hidden">
						{{ current == key ? 'Current page'|t : 'Page'|t }}
					</span>
					{{- key -}}
				</a>
			{% endfor %}
			{% if items.next %}
				<a href="{{ items.next.href }}" class="next" title="next page">&#10095;</a>
			{% endif %}
		</div>
	</div>
{% endif %}
